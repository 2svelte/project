{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Path taken by deadliest tornado in the 2000s",
    "width": 800,
    "height": 500,
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/vega/vega/main/docs/data/us-10m.json",
          "format": {
            "type": "topojson",
            "feature": "states"
          }
        },
        "projection": {
          "type": "albersUsa"
        },
        "mark": {
          "type": "geoshape",
          "fill": "#eee",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/gaikouteki/project/main/Assignment%202/datasets/cleaned/tornado_path(cleaned).csv"
        },
        "projection": {
          "type": "albersUsa"
        },
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "start_lon",
            "type": "quantitative"
          },
          "latitude": {
            "field": "start_lat",
            "type": "quantitative"
          },
          "size": {
            "value": 10
          },
          "color": {
            "value": "gray"
          },
          "tooltip": [
            {"field": "state_name", "type": "nominal", "title": "State"},
            {"field": "Year", "type": "temporal", "title": "Year"},
            {"field": "magnitude", "type": "quantitative", "title": "Category"},
            {"field": "fatality_count", "type": "quantitative", "title": "Fatality Count"}
          ]
        
        }
      },
      {
        "data": {
          "values": [
            {"tornado": "1", "order": 1},
            {"tornado": "2", "order": 2},
            {"tornado": "3", "order": 3},
            {"tornado": "4", "order": 4},
            {"tornado": "5", "order": 5},
            {"tornado": "6", "order": 6},
            {"tornado": "7", "order": 7},
            {"tornado": "8", "order": 8}
          ]
        },
        "transform": [
          {
            "lookup": "tornado",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/gaikouteki/project/main/Assignment%202/datasets/cleaned/tornado_path(cleaned).csv"
              },
              "key": "ID",
              "fields": [
                "start_lon",
                "start_lat"
              ]
            }
          }
        ],
        "projection": {
          "type": "albersUsa"
        },
        "mark": "line",
        "encoding": {
          "longitude": {
            "field": "start_lon",
            "type": "quantitative"
          },
          "latitude": {
            "field": "start_lat",
            "type": "quantitative"
          },
          "order": {
            "field": "order"
          },
          "color": {
            "value": "red"
          },
          "size": {
            "value": 3
          },
          "tooltip": [
            {"field": "state_name", "type": "nominal", "title": "State"},
            {"field": "Year", "type": "temporal", "title": "Year"},
            {"field": "magnitude", "type": "quantitative", "title": "Category"},
            {"field": "fatality_count", "type": "quantitative", "title": "Fatality Count"}
          ]
        }
      }
    ]
}